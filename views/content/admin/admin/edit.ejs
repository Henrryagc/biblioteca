<!--Incluyendo header-->
<%- include('adminHeader'); -%>

<link rel="stylesheet" href="/stylesheets/admin/admin.css" />

<h3>Editar Datos de Administrador</h3>

<div class="container">
  <form>
      <h4>Elegir campos a editar</h4>
    <div class="form-group row">
      <label for="nombres" class="col-sm-2 col-form-label"
      >Nombres</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nombres" />
      </div>
    </div>
    <div class="form-group row">
      <label for="apellidos" class="col-sm-2 col-form-label"
        >Apellidos</label
      >
      <div class="col-sm-10">
        <input type="text" class="form-control" id="apellidos" />
      </div>
    </div>
    <div class="form-group row">
      <label for="dni" class="col-sm-2 col-form-label"
        >DNI</label
      >
      <div class="col-sm-10">
        <input type="text" class="form-control" id="dni" />
      </div>
    </div>
    <div class="form-group row">
      <label for="correo" class="col-sm-2 col-form-label"
        >Correo</label
      >
      <div class="col-sm-10">
        <input type="email" class="form-control" id="correo" />
      </div>
    </div>
    <div class="form-group row">
      <label for="celular" class="col-sm-2 col-form-label"
        >Celular</label
      >
      <div class="col-sm-10">
        <input type="text" class="form-control" id="celular" />
      </div>
    </div>
    <div class="mybtn">
        <button class="btn btn-success">Guardar</button>
    </div>
  </form>


  <form>
      <h4>Cambiar Contraseña</h4>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-4 col-form-label">Contraseña</label>
      <div class="col-sm-8">
        <input type="password   " class="form-control" id="pass1" required/>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-4 col-form-label"
        >Repetir Contraseña</label
      >
      <div class="col-sm-8">
        <input type="password" class="form-control" id="pass2" required/>
      </div>
    </div>
    <div class="mybtn">
        <button class="btn btn-success">Guardar</button>
    </div>
  </form>
</div>

<%- include('adminFooter'); -%>
